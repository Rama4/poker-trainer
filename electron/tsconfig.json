{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "../dist",
    "rootDir": ".",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["../node_modules/*"]
    }
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
